<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="110dp"
    android:background="@color/weather_back" >

    <TextView
        android:id="@+id/daydate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="m/dd"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/dayicon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/daydate"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/dayhi"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dayicon"
        android:layout_marginRight="23dp"
        android:text="HI"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/daylo"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/dayhi"
        android:layout_below="@+id/dayhi"
        android:text="LOW"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/precipchance"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/daycond"
        android:layout_below="@+id/daycond"
        android:textColor="@color/white"
        android:text="Chance of Precip%" />

    <TextView
        android:id="@+id/daycond"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_above="@+id/daylo"
        android:layout_toRightOf="@+id/dayicon"
        android:text="DayCondition"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/wind"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/dayhi"
        android:layout_below="@+id/precipchance"
        android:text="Wind"
        android:textColor="@color/white" />

</RelativeLayout>